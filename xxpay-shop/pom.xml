			<systemPath>${project.basedir}/lib/fluent-hc-4.3.3.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>org.httpclient</groupId>
			<artifactId>httpclient-shop</artifactId>
			<version>1.0.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/httpclient-4.3.3.jar</systemPath>
