			<scope>system</scope>
			<systemPath>${project.basedir}/lib/commons-codec-1.3.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>org.commons-codec</groupId>
			<artifactId>commons-codec-shop</artifactId>
			<version>1.0.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/commons-codec-1.6.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>org.commons-collections</groupId>
			<artifactId>commons-collections-shop</artifactId>
			<version>1.0.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/commons-collections-3.2.1.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>org.commons-httpclient</groupId>
			<artifactId>commons-httpclient-shop</artifactId>
